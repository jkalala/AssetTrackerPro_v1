{
  "name": "assettrackerpro-enterprise-testing",
  "version": "1.0.0",
  "description": "Enterprise-grade testing framework for AssetTrackerPro",
  "scripts": {
    "test": "jest --config=testing/enterprise-jest.config.js",
    "test:unit": "jest --config=testing/enterprise-jest.config.js --selectProjects=unit",
    "test:integration": "jest --config=testing/enterprise-jest.config.js --selectProjects=integration",
    "test:security": "jest --config=testing/enterprise-jest.config.js --selectProjects=security",
    "test:compliance": "jest --config=testing/enterprise-jest.config.js --selectProjects=compliance",
    "test:coverage": "jest --config=testing/enterprise-jest.config.js --coverage",
    "test:watch": "jest --config=testing/enterprise-jest.config.js --watch",
    "test:ci": "jest --config=testing/enterprise-jest.config.js --ci --coverage --watchAll=false",
    "test:e2e": "playwright test --config=testing/playwright-enterprise.config.ts",
    "test:e2e:ui": "playwright test --config=testing/playwright-enterprise.config.ts --ui",
    "test:e2e:headed": "playwright test --config=testing/playwright-enterprise.config.ts --headed",
    "test:e2e:debug": "playwright test --config=testing/playwright-enterprise.config.ts --debug",
    "test:accessibility": "playwright test --config=testing/playwright-enterprise.config.ts --project=accessibility",
    "test:performance": "playwright test --config=testing/playwright-enterprise.config.ts --project=performance",
    "test:mobile": "playwright test --config=testing/playwright-enterprise.config.ts --project=mobile-chrome --project=mobile-safari",
    "test:load": "k6 run testing/load-testing/k6-enterprise.js",
    "test:load:government": "k6 run --env SCENARIO=government testing/load-testing/k6-enterprise.js",
    "test:load:enterprise": "k6 run --env SCENARIO=enterprise testing/load-testing/k6-enterprise.js",
    "test:load:education": "k6 run --env SCENARIO=education testing/load-testing/k6-enterprise.js",
    "test:stress": "k6 run --env SCENARIO=stress testing/load-testing/k6-enterprise.js",
    "test:spike": "k6 run --env SCENARIO=spike testing/load-testing/k6-enterprise.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:security && npm run test:compliance",
    "test:smoke": "jest --config=testing/enterprise-jest.config.js --testNamePattern='smoke'",
    "test:regression": "npm run test:all && npm run test:load",
    "test:setup": "node testing/scripts/setup-test-environment.js",
    "test:teardown": "node testing/scripts/teardown-test-environment.js",
    "test:seed": "node testing/scripts/seed-test-data.js",
    "test:clean": "node testing/scripts/clean-test-data.js",
    "test:reports": "npm run test:coverage && npm run test:e2e && npm run generate:reports",
    "generate:reports": "node testing/scripts/generate-reports.js",
    "validate:security": "npm run test:security && npm run audit:security",
    "validate:compliance": "npm run test:compliance && npm run audit:compliance",
    "audit:security": "node testing/scripts/security-audit.js",
    "audit:compliance": "node testing/scripts/compliance-audit.js",
    "benchmark:performance": "node testing/scripts/performance-benchmark.js",
    "monitor:tests": "node testing/scripts/test-monitor.js"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "allure-playwright": "^2.9.2",
    "axe-core": "^4.8.2",
    "axe-playwright": "^1.2.3",
    "babel-jest": "^29.7.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "k6": "^0.47.0",
    "lighthouse": "^11.3.0",
    "msw": "^2.0.8",
    "pa11y": "^7.0.0",
    "playwright-lighthouse": "^4.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "jest": {
    "projects": [
      "testing/enterprise-jest.config.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "testing",
    "enterprise",
    "government",
    "education",
    "compliance",
    "security",
    "performance",
    "accessibility",
    "jest",
    "playwright",
    "k6"
  ],
  "author": "AssetTrackerPro Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/assettrackerpro.git",
    "directory": "testing"
  },
  "bugs": {
    "url": "https://github.com/your-org/assettrackerpro/issues"
  },
  "homepage": "https://github.com/your-org/assettrackerpro#readme"
}
